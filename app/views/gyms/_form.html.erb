<% if @gym.errors.any? %>
  <div id="error_explanation">
    <ul>
    <% @gym.errors.full_messages.each do |message| %>
      <li> <%= message %>
    <% end %>
    </ul>
  </div>
<% end %>

<div class='row'>
  <div class='col-xs-12'>
    <%= form_for @gym do |f| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :name %>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :name, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :address %>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :address, class: "form-control"  %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :cod %>
        </div>
        <div class="col-sm-4">
          <%= f.number_field :cod, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :open_hour %>
        </div>
        <div class="col-sm-4">
          <%= f.text_field :open_hour, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :close_hour %>
        </div>
        <div class="col-sm-4">
          <%= f.text_field :close_hour, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :working_days %>
        </div>
        <div class="col-sm-6">
          <%= f.text_area :working_days, class: "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.label :gallery %>
          <%= f.file_field :gallery, multiple: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= f.submit %>
        </div>
      </div>
    <% end %>
  </div>
</div>
