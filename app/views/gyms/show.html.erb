<h3><%= @gym.name %></h3>
<p><%=  @gym.cod %></p>
<p><%= @gym.address %></p>
<p><%= @gym.open_hour  %></p>
<p><%= @gym.close_hour  %></p>
<p><%= @gym.working_days  %></p>
<% @gym.gallery.each do |image| %>
  <%= image_tag image %>
<% end %>

<% if employee_signed_in? && current_employee.gym?(@gym) || current_employee.admin?%>
  <%= link_to 'Editar', edit_gym_path %>
<% end %>

<% if current_employee.admin? %>
  <%= link_to 'Remover', @gym, method: :delete %>
<% end %>

<%= link_to 'Voltar', root_path %>
