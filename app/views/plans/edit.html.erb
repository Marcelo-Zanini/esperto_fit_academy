<%= "Editando plano: #{@plan.name}" %>

<%= flash[:alert] %>
<% @plan.errors.full_messages.each do |message| %>
      <li> <%= message %>
<%end%>


<%= form_for @plan do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name  %>
  <%= f.label :minimum_permanence %>
  <%= f.number_field :minimum_permanence  %>
  
  <%= f.submit 'Salvar' %>
<% end %>