<h1>Cadastro de Plano</h1>
<%= bootstrap_form_for @plan, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-4" do |f| %>
  <%= f.text_field :name  %>
  <%= f.number_field :minimum_permanence  %>
  <%= f.submit 'Cadastrar' %>
<% end %>
<%= flash[:alert] %>

<%= @plan.errors.full_messages if @plan.errors.any? %>